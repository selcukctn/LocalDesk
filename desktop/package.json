{
  "name": "localdesk-desktop",
  "version": "1.0.0",
  "description": "Local Desk masaüstü uygulaması - Stream Deck benzeri klavye kısayol yönetimi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w keyboard-addon"
  },
  "keywords": [
    "electron",
    "stream-deck",
    "keyboard",
    "shortcuts"
  ],
  "author": {
    "name": "Harun Selçuk Çetin"
  },
  "license": "MIT",
  "copyright": "Copyright © 2024 Harun Selçuk Çetin",
  "dependencies": {
    "body-parser": "^1.20.3",
    "bonjour-service": "^1.1.1",
    "dgram": "^1.0.1",
    "express": "^4.18.2",
    "node-gyp": "^10.0.1",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.localdesk.desktop",
    "productName": "Local Desk",
    "copyright": "Copyright © 2024 Harun Selçuk Çetin",
    "win": {
      "icon": "src/icon.ico",
      "publisherName": "Harun Selçuk Çetin",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "src/icon.ico",
      "uninstallerIcon": "src/icon.ico",
      "installerHeaderIcon": "src/icon.ico",
      "license": null,
      "include": null
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "server/keyboard-addon/build/Release/keyboard.node"
    ],
    "asarUnpack": [
      "**/node_modules/@serialport/**/*",
      "**/node_modules/serialport/**/*",
      "**/node_modules/body-parser/**/*",
      "server/keyboard-addon/build/Release/keyboard.node"
    ],
    "extraResources": [
      {
        "from": "server/data",
        "to": "server/data",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
