{
  "name": "localdesk-desktop",
  "version": "1.0.0",
  "description": "Local Desk masaüstü uygulaması - Stream Deck benzeri klavye kısayol yönetimi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w keyboard-addon"
  },
  "keywords": ["electron", "stream-deck", "keyboard", "shortcuts"],
  "author": "Harun",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "dgram": "^1.0.1",
    "bonjour-service": "^1.1.1",
    "uuid": "^9.0.0",
    "node-gyp": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.localdesk.desktop",
    "productName": "Local Desk",
    "win": {
      "icon": "src/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/socket.io/**/*",
      "node_modules/dgram/**/*",
      "node_modules/bonjour-service/**/*",
      "node_modules/uuid/**/*",
      "node_modules/node-gyp/**/*"
    ]
  }
}

