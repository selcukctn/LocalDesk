<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all cleartext (HTTP) traffic for local network communication -->
    <!-- This is needed for Socket.IO and WebRTC connections to local servers -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>

